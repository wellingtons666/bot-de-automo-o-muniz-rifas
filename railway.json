{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": [
      "package.json",
      "package-lock.json",
      "Dockerfile",
      "railway.json",
      "index.js",
      "prestart.js",
      "config/**",
      "handlers/**",
      "utils/**"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 120,
    "healthcheckInterval": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 15,
    "numReplicas": 1,
    "sleepApplication": false,
    "multiRegionConfig": {
      "default": {
        "numReplicas": 1
      }
    }
  },
  "environments": {
    "production": {
      "deploy": {
        "startCommand": "npm start",
        "healthcheckTimeout": 150,
        "restartPolicyMaxRetries": 20
      }
    }
  }
}
